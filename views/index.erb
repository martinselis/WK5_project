<div id="container">
  <div id="searchandtoggles">
    <div id="search">
      <form method="post" action="/search">
        <label>
        <input type="text" name="search">
        </label>
        <label>
          <input type="submit" value="Search">
        </label>
      </form>
    </div>

    <div id="visitToggles">
      <a href="/visited">
        <div class="toggle">Visited</div></a>
      <a href="/not-visited">
        <div class="toggle">Not yet visited</div></a>
      <a href="/">
        <div class="toggle">All</div>
      </a>
    </div>

  </div>

  <div id="visits">

    <div id="bucketItems">
      <% @bucketlist.each do |item| %>

      <div class="bucketItem">
        <div class="bucketDescription">
          <p class="city"><a href="/cities/<%=item.city.id%>/edit"><%=item.city.name%></a>, <%=item.city.country.name%> </p>
          <p>Status: <%=item.visit_status %></p><a href="/visit/<%=item.id%>/update-status">Update status</a>
        </div>
        <div class="bucketSights">
          <ul>
            <% item.sights.each do |sight| %>
            <li><%= sight.name %>
            <% end %>
        </div>
      </div>

      <% end %>
    </div>
    <a href="/cities/new">Add a new destination</a>
  </div>
  <div id="countries">
    <% @countries.each do |country| %>
    <a href="/cities/by-country/<%=country.id%>">
      <div class="country">
        <div class="countryName">
          <%= country.name %>
        </div>
        <a href="/countries/<%=country.id%>/edit">
          <div class="countryEdit">
            EDIT
          </div>
        </a>
      </div>
    </a>
    <% end %>
  </div>
</div>
